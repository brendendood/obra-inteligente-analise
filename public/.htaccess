
# Apache configuration para domínio personalizado
RewriteEngine On

# Redirecionar www para não-www
RewriteCond %{HTTP_HOST} ^www\.arqcloud\.com\.br [NC]
RewriteRule ^(.*)$ https://arqcloud.com.br/$1 [R=301,L]

# Forçar HTTPS
RewriteCond %{HTTPS} off
RewriteCond %{HTTP_HOST} arqcloud\.com\.br [NC]
RewriteRule ^(.*)$ https://arqcloud.com.br/$1 [R=301,L]

# SPA routing
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]

# Headers de segurança
<IfModule mod_headers.c>
    Header always set X-Frame-Options DENY
    Header always set X-Content-Type-Options nosniff
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>
